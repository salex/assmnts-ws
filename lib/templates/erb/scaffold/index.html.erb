<fieldset class="index-list">
	<legend class="navspan">
	   <%= plural_name.capitalize %>
    <%%= link_to 'New <%= human_name %>', new_<%= singular_name %>_path %>
	</legend>

  <table>
    <tr class="list-header">
  <% for attribute in attributes -%>
      <th><%= attribute.human_name %></th>
  <% end -%>
      <th>Actions</th>
    </tr>

  <%% @<%= plural_name %>.each do |<%= singular_name %>| %>
    <tr>
  <% for attribute in attributes -%>
      <td><%%= <%= singular_name %>.<%= attribute.name %> %></td>
  <% end -%>
      <td>
        <%%= link_to 'Show', <%= singular_name %> %>
        <%%= link_to 'Edit', edit_<%= singular_name %>_path(<%= singular_name %>) %>
        <%%= link_to 'Destroy', <%= singular_name %>, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <%% end %>
  </table>
</fieldset>

